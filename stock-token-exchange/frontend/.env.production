# Frontend Production Environment Configuration
# This file is used when building the frontend for production deployment

# Environment
NODE_ENV=production

# API Endpoints - Production URLs
REACT_APP_BACKEND_URL=http://localhost:5001
REACT_APP_BLOCKCHAIN_URL=http://localhost:8545
REACT_APP_PYTHON_RUNNER_URL=http://localhost:5000
REACT_APP_CARTESI_NODE_URL=http://localhost:5005
REACT_APP_DAPP_URL=http://localhost:5007

# Application Configuration
REACT_APP_APP_NAME=Cartesi Stock Exchange
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENV=production

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Performance & Optimization
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_CACHE_ENABLED=true

# Feature Flags - Production
REACT_APP_SHOW_DEBUG_INFO=false
REACT_APP_MOCK_MODE=false
REACT_APP_TEST_MODE=false

# Network Configuration
REACT_APP_CHAIN_ID=31337
REACT_APP_NETWORK_NAME=localhost

# Contract Addresses (to be set during deployment)
REACT_APP_EXCHANGE_CONTRACT_ADDRESS=
REACT_APP_STOCK_TOKEN_ADDRESS=
REACT_APP_CRYPTO_TOKEN_ADDRESS=

# Test Account Settings (preserved for manual testing)
REACT_APP_MINT_TEST_TOKENS=true
REACT_APP_TEST_TOKEN_AMOUNT=1000

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_SECURE_COOKIES=true

# Logging
REACT_APP_LOG_LEVEL=warn
REACT_APP_ENABLE_CONSOLE_LOGS=false

# WebSocket Configuration
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_INTERVAL=5000

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_AUTO_REFRESH_INTERVAL=30000